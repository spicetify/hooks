{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"style": {
				"noParameterAssign": "off",
				"noNonNullAssertion": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "space",
		"indentWidth": 3,
		"lineWidth": 112
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"trailingComma": "all"
		}
	}
}
